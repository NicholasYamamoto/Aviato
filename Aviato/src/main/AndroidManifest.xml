<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.aviato">

    <uses-permission android:name="android.permission.CALL_PHONE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/logo_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.example.aviato.Pages.SplashPage">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="com.example.aviato.Pages.SignInPage" />
        <activity android:name="com.example.aviato.Pages.SignUpPage" />
        <activity android:name="com.example.aviato.Pages.ForgotPasswordPage" />

        <activity android:name="com.example.aviato.Pages.ViewProfilePage" />

        <activity android:name="com.example.aviato.Pages.BookAFlightPage" />
        <activity android:name="com.example.aviato.Pages.PlanATripPage" />

        <activity android:name="com.example.aviato.Pages.CheckoutPage" />
        <activity android:name="com.example.aviato.Pages.OrderConfirmationPage" />

        <activity
            android:name="com.example.aviato.MainActivity"
            android:theme="@style/AppTheme" />
    </application>


</manifest>