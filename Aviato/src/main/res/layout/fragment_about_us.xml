<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:layout_gravity="center"
    tools:context="com.example.aviato.Fragments.AboutUsFragment">

    <include
        layout="@layout/app_bar_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:textAlignment="center"
            android:text="Made with love from these talented engineers:"
            android:textColor="@color/colorWhite"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="50dp"
            >

        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nicholas Yamamoto"
            android:textColor="@color/colorWhite"
            android:textSize="35dp"
            android:paddingBottom="10dp"
            android:layout_gravity="center"

            >

        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jackson Duvert"
            android:textColor="@color/colorWhite"
            android:textSize="35dp"
            android:paddingBottom="10dp"
            android:layout_gravity="center"
            >

        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Brian Graham"
            android:textColor="@color/colorWhite"
            android:textSize="35dp"
            android:paddingBottom="10dp"
            android:layout_gravity="center"

            >

        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lanu Atatai"
            android:textColor="@color/colorWhite"
            android:textSize="35dp"
            android:paddingBottom="10dp"
            android:layout_gravity="center"

            >
        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:textAlignment="center"
            android:text="For the Spring 2020 CS4920 - Senior Project course at UCM."
            android:textColor="@color/colorWhite"
            android:layout_gravity="center"
            android:paddingTop="50dp"
            >
        </TextView>

    </LinearLayout>
</RelativeLayout>
