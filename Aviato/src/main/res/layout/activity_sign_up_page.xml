<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/aviato_logo_background"
    tools:context="com.example.aviato.Pages.SignUpPage">

    <TextView
        android:id="@+id/tv_create_account_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="50sp"
        android:text="Create Account"
        android:textAlignment="center"
        android:textColor="@color/colorWhite"
        android:textSize="40sp"
        android:textStyle="normal"
        android:gravity="center_horizontal" />

    <EditText
        android:id="@+id/signup_name"
        android:layout_width="340sp"
        android:layout_height="55sp"
        android:layout_below="@+id/tv_create_account_label"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10sp"
        android:layout_marginBottom="10sp"
        android:background="@drawable/btns_darkgray"
        android:hint="Name"
        android:inputType="text"
        android:textColor="@color/colorWhite"
        android:textColorHint="@color/colorWhite"
        />
    <EditText
        android:id="@+id/signup_email"
        android:layout_width="340sp"
        android:layout_height="55sp"
        android:layout_below="@+id/signup_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10sp"
        android:layout_marginBottom="10sp"
        android:background="@drawable/btns_darkgray"
        android:hint="Email Address"
        android:inputType="textEmailAddress"
        android:textColor="@color/colorWhite"
        android:textColorHint="@color/colorWhite" />

    <EditText
        android:id="@+id/signup_password"
        android:layout_width="340sp"
        android:layout_height="55sp"
        android:layout_below="@+id/signup_email"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10sp"
        android:layout_marginBottom="10sp"
        android:background="@drawable/btns_darkgray"
        android:hint="Password"
        android:inputType="textPassword"
        android:textColor="@color/colorWhite"
        android:textColorHint="@color/colorWhite" />

    <TextView
        android:id="@+id/tv_preferred_carrier_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/signup_password"
        android:layout_marginTop="80sp"
        android:text="Preferred Airline"
        android:textAlignment="center"
        android:textColor="@color/colorWhite"
        android:textSize="20sp"
        android:textStyle="normal"
        android:gravity="center_horizontal" />

    <Spinner
        android:id="@+id/signup_preferred_carrier_spinner"
        android:layout_width="340sp"
        android:layout_height="55sp"
        android:layout_marginTop="10sp"
        android:layout_marginBottom="10sp"
        android:layout_below="@+id/tv_preferred_carrier_label"
        android:layout_centerHorizontal="true"
        android:entries="@array/carriers_array"
        android:textColor="@color/colorWhite"
        android:background="@color/colorWhite"
        android:textColorHint="@color/colorWhite"/>

    <TextView
        android:id="@+id/tv_default_depart_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/signup_preferred_carrier_spinner"
        android:text="My Closest Airport"
        android:textAlignment="center"
        android:textColor="@color/colorWhite"
        android:textSize="20sp"
        android:textStyle="normal"
        android:gravity="center_horizontal" />

    <Spinner
        android:id="@+id/signup_default_depart_spinner"
        android:layout_width="340sp"
        android:layout_height="55sp"
        android:layout_marginTop="10sp"
        android:layout_marginBottom="10sp"
        android:layout_below="@+id/tv_default_depart_label"
        android:layout_centerHorizontal="true"
        android:entries="@array/airports_array"
        android:textColor="@color/colorWhite"
        android:background="@color/colorWhite"
        android:textColorHint="@color/colorWhite" />


    <Button
        android:id="@+id/btn_add_account"
        android:layout_width="340sp"
        android:layout_height="55sp"
        android:layout_alignParentBottom="true"
        android:text="Confirm"
        android:layout_marginTop="10sp"
        android:layout_marginBottom="25sp"
        android:background="@drawable/btns_lightblue"
        android:textColor="@color/colorWhite"
        android:layout_centerHorizontal="true"
        android:hapticFeedbackEnabled="true"
        android:stateListAnimator="@null"
        />

</RelativeLayout>
