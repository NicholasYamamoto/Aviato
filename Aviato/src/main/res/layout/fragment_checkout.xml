<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAviatoLogoBlue"
    tools:context="com.example.aviato.Pages.CheckoutPage">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txt_review_order_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:gravity="center_horizontal"
            android:text="Review Your Order:"
            android:textAlignment="center"
            android:textColor="@color/colorWhite"
            android:textSize="40sp"
            android:textStyle="normal" />

        <!--        Departing Information Section         -->

        <View
            android:id="@+id/departing_info_view"
            android:layout_width="match_parent"
            android:layout_height="320dp"
            android:layout_below="@id/txt_review_order_label"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="10dp"
            android:background="@android:drawable/dialog_holo_dark_frame">

        </View>

        <TextView
            android:id="@+id/txt_departing_city_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_review_order_label"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="10dp"
            android:background="@color/colorRed"
            android:gravity="center_horizontal"
            android:text="Departing:"
            android:textAlignment="center"
            android:textColor="@color/colorWhite"
            android:textSize="30sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/txt_departing_city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_departing_city_label"
            android:layout_marginTop="5sp"
            android:gravity="center_horizontal"
            android:text="Kansas City - MCI"
            android:textAlignment="center"
            android:textColor="@color/colorWhite"
            android:textSize="20sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/txt_departing_date_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_departing_city"
            android:layout_marginTop="5sp"
            android:gravity="center_horizontal"
            android:text="On:"
            android:textAlignment="center"
            android:textColor="@color/colorWhite"
            android:textSize="30sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/txt_book_departing_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_departing_date_label"
            android:layout_marginTop="5sp"
            android:gravity="center_horizontal"
            android:text="April 10, 2020"
            android:textAlignment="center"
            android:textColor="@color/colorWhite"
            android:textSize="20sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/txt_departing_time_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_book_departing_date"
            android:layout_marginTop="5sp"
            android:gravity="center_horizontal"
            android:text="At:"
            android:textAlignment="center"
            android:textColor="@color/colorWhite"
            android:textSize="30sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/txt_departing_time_list_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_departing_time_label"
            android:layout_marginTop="5sp"
            android:gravity="center_horizontal"
            android:text="10:00PM"
            android:textAlignment="center"
            android:textColor="@color/colorWhite"
            android:textSize="20sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/txt_departing_gate_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_departing_time_list_layout"
            android:layout_marginTop="5sp"
            android:gravity="center_horizontal"
            android:text="From Gate #:"
            android:textAlignment="center"
            android:textColor="@color/colorWhite"
            android:textSize="30sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/txt_departing_gate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_departing_gate_label"
            android:layout_marginTop="5sp"
            android:gravity="center_horizontal"
            android:text="19"
            android:textAlignment="center"
            android:textColor="@color/colorWhite"
            android:textSize="20sp"
            android:textStyle="normal" />

        <!--        Arrival Information Section         -->

        <View
            android:id="@+id/destination_info_view"
            android:layout_width="match_parent"
            android:layout_height="320dp"
            android:layout_below="@id/departing_info_view"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="10dp"
            android:background="@android:drawable/dialog_holo_dark_frame"></View>

        <TextView
            android:id="@+id/txt_arrival_info_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/departing_info_view"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="10dp"
            android:background="@color/colorYellow"
            android:gravity="center_horizontal"
            android:text="Arriving:"
            android:textAlignment="center"
            android:textColor="@color/colorWhite"
            android:textSize="30sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/txt_destination_city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_arrival_info_label"
            android:layout_marginTop="5sp"
            android:gravity="center_horizontal"
            android:text="Los Angeles - LAX"
            android:textAlignment="center"
            android:textColor="@color/colorWhite"
            android:textSize="20sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/txt_destination_date_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_destination_city"
            android:layout_marginTop="5sp"
            android:gravity="center_horizontal"
            android:text="On:"
            android:textAlignment="center"
            android:textColor="@color/colorWhite"
            android:textSize="30sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/txt_destination_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_destination_date_label"
            android:layout_marginTop="5sp"
            android:gravity="center_horizontal"
            android:text="May 16, 2020"
            android:textAlignment="center"
            android:textColor="@color/colorWhite"
            android:textSize="20sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/txt_destination_time_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_destination_date"
            android:layout_marginTop="5sp"
            android:gravity="center_horizontal"
            android:text="At:"
            android:textAlignment="center"
            android:textColor="@color/colorWhite"
            android:textSize="30sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/txt_destination_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_destination_time_label"
            android:layout_marginTop="5sp"
            android:gravity="center_horizontal"
            android:text="12:30AM"
            android:textAlignment="center"
            android:textColor="@color/colorWhite"
            android:textSize="20sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/txt_destination_gate_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_destination_time"
            android:layout_marginTop="5sp"
            android:gravity="center_horizontal"
            android:text="At Gate #:"
            android:textAlignment="center"
            android:textColor="@color/colorWhite"
            android:textSize="30sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/txt_destination_gate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_destination_gate_label"
            android:layout_marginTop="5sp"
            android:gravity="center_horizontal"
            android:text="19"
            android:textAlignment="center"
            android:textColor="@color/colorWhite"
            android:textSize="20sp"
            android:textStyle="normal" />

        <!--        Return Information Section         -->

        <View
            android:id="@+id/return_info_view"
            android:layout_width="match_parent"
            android:layout_height="320dp"
            android:layout_below="@id/txt_destination_gate"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="10dp"
            android:background="@android:drawable/dialog_holo_dark_frame">

        </View>

        <TextView
            android:id="@+id/txt_return_info_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_destination_gate"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="10dp"
            android:background="@color/colorGreen"
            android:gravity="center_horizontal"
            android:text="Returning:"
            android:textAlignment="center"
            android:textColor="@color/colorWhite"
            android:textSize="30sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/txt_return_city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_return_info_label"
            android:layout_marginTop="5sp"
            android:gravity="center_horizontal"
            android:text="Kansas CIty - MCI"
            android:textAlignment="center"
            android:textColor="@color/colorWhite"
            android:textSize="20sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/txt_return_date_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_return_city"
            android:layout_marginTop="5sp"
            android:gravity="center_horizontal"
            android:text="On:"
            android:textAlignment="center"
            android:textColor="@color/colorWhite"
            android:textSize="30sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/txt_book_return_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_return_date_label"
            android:layout_marginTop="5sp"
            android:gravity="center_horizontal"
            android:text="May 16, 2020"
            android:textAlignment="center"
            android:textColor="@color/colorWhite"
            android:textSize="20sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/txt_return_time_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_book_return_date"
            android:layout_marginTop="5sp"
            android:gravity="center_horizontal"
            android:text="At:"
            android:textAlignment="center"
            android:textColor="@color/colorWhite"
            android:textSize="30sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/txt_return_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_return_time_label"
            android:layout_marginTop="5sp"
            android:gravity="center_horizontal"
            android:text="2:35PM"
            android:textAlignment="center"
            android:textColor="@color/colorWhite"
            android:textSize="20sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/txt_return_gate_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_return_time"
            android:layout_marginTop="5sp"
            android:gravity="center_horizontal"
            android:text="At Gate #:"
            android:textAlignment="center"
            android:textColor="@color/colorWhite"
            android:textSize="30sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/txt_return_gate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_return_gate_label"
            android:layout_marginTop="5sp"
            android:gravity="center_horizontal"
            android:text="19"
            android:textAlignment="center"
            android:textColor="@color/colorWhite"
            android:textSize="20sp"
            android:textStyle="normal" />

        <!--        Order Details Section         -->

        <View
            android:id="@+id/order_details_view"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@id/return_info_view"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="10dp"
            android:background="@android:drawable/dialog_holo_dark_frame">

        </View>

        <TextView
            android:id="@+id/txt_order_details_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/return_info_view"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="10dp"
            android:background="@color/colorPink"
            android:gravity="center_horizontal"
            android:text="Order Details:"
            android:textAlignment="center"
            android:textColor="@color/colorWhite"
            android:textSize="30sp"
            android:textStyle="normal" />

        <LinearLayout
            android:id="@+id/passenger_count_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_order_details_label"
            android:layout_marginTop="20sp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_passenger_count_label"
                android:layout_width="wrap_content"
                android:layout_height="55sp"
                android:layout_marginLeft="10sp"
                android:gravity="center_horizontal"
                android:text="Passengers:"
                android:textAlignment="center"
                android:textColor="@color/colorWhite"
                android:textColorHint="@color/colorWhite"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/txt_passenger_count"
                android:layout_width="wrap_content"
                android:layout_height="55sp"
                android:layout_marginHorizontal="5sp"
                android:gravity="center_horizontal"
                android:text="1"
                android:textAlignment="center"
                android:textColor="@color/colorWhite"
                android:textColorHint="@color/colorWhite"
                android:textSize="30sp" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/order_total_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/passenger_count_group"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_total_label"
                android:layout_width="wrap_content"
                android:layout_height="55sp"
                android:layout_marginHorizontal="5sp"
                android:gravity="center_horizontal"
                android:text="Total:"
                android:textAlignment="center"
                android:textColor="@color/colorWhite"
                android:textColorHint="@color/colorWhite"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/txt_total"
                android:layout_width="wrap_content"
                android:layout_height="55sp"
                android:layout_marginHorizontal="5sp"
                android:gravity="center_horizontal"
                android:text="$117.69"
                android:textAlignment="center"
                android:textColor="@color/colorWhite"
                android:textColorHint="@color/colorWhite"
                android:textSize="30sp" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/order_confirm_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/order_details_view"
            android:gravity="center"
            android:orientation="vertical">

            <!--            <Button-->
            <!--                android:id="@+id/btn_review_trip_details"-->
            <!--                android:layout_width="340sp"-->
            <!--                android:layout_height="55sp"-->
            <!--                android:text="Review Trip Details"-->
            <!--                android:textSize="20sp"-->
            <!--                android:textColor="@color/colorWhite"-->
            <!--                android:layout_marginTop="25sp"-->
            <!--                android:layout_marginBottom="5sp"-->
            <!--                android:background="@drawable/btns_lightblue"-->
            <!--                android:hapticFeedbackEnabled="true"-->
            <!--                android:stateListAnimator="@null"-->
            <!--                />-->

            <Button
                android:id="@+id/btn_submit_order"
                android:layout_width="340sp"
                android:layout_height="55sp"
                android:layout_below="@+id/order_details_view"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5sp"
                android:layout_marginBottom="5sp"
                android:background="@drawable/btns_lightblue"
                android:hapticFeedbackEnabled="true"
                android:stateListAnimator="@null"
                android:text="Place Order"
                android:textColor="@color/colorWhite"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btn_cancel_order"
                android:layout_width="340sp"
                android:layout_height="55sp"
                android:layout_below="@+id/btn_submit_order"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5sp"
                android:layout_marginBottom="25sp"
                android:background="@drawable/btns_red"
                android:hapticFeedbackEnabled="true"
                android:stateListAnimator="@null"
                android:text="Cancel Order"
                android:textColor="@color/colorWhite"
                android:textSize="20sp" />

        </LinearLayout>


    </RelativeLayout>
</ScrollView>
